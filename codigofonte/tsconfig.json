{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "noImplicitAny": false,
        "allowUnreachableCode": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "charset": "utf8",
        "pretty": true,
        "watch": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
